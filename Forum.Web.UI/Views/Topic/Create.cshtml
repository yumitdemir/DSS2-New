@using System.Security.Claims
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Forum.Web.Api.Controllers.CreateTopicDto

@{
    ViewBag.Title = "Create Topic";
    Layout = "_Layout";
}

<h2>Create Topic</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="CreatorId" class="form-control" value="@User.FindFirstValue(ClaimTypes.NameIdentifier)" />
    <input type="hidden" asp-for="Likes" class="form-control" value="0"/>
    <input type="hidden" asp-for="Status" class="form-control" value="0" />

    <div class="form-group">
        <label asp-for="Subject" class="control-label"></label>
        <input asp-for="Subject" class="form-control"/>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary"/>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>