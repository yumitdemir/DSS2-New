@using System.Security.Claims
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Forum.Infrastructure.TopicDetailDto

@{
    ViewBag.Title = "Topic Details";
    Layout = "_Layout";
}

<h2>Topic Details</h2>

<div>
    <h4>Topic</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subject)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subject)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Likes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Likes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatorId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatorId)
        </dd>
    </dl>
</div>
<p>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</p>
<a asp-action="Create" asp-controller="Comment" asp-route-id="@Model.Id" class="btn btn-primary">Add a Comment</a>

<h3>Comments</h3>
@foreach (var comment in Model.Comments)
{
    <div>
    <h4>@comment.Creator.Username</h4>
    <p>@comment.Text</p>
</div>
}